{
  "name": "quick-credit",
  "version": "1.0.0",
  "description": "Online lending platform that provides short term soft loans",
  "main": "app.js",
  "engines": {
    "node": "11.4.0"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "babel server -d dist",
    "start": "node dist/app",
    "test": "cross-env NODE_ENV=test npm run migration && nyc --reporter=html mocha --require babel-register ./server/test/index.spec --exit",
    "start:dev": "cross-env NODE_ENV=dev npm run migration && nodemon --exec babel-node ./server/app.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "migration": "babel-node ./server/db/migration"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sneakymaxy/Quick-Credit.git"
  },
  "author": "Maxwellington",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sneakymaxy/Quick-Credit/issues"
  },
  "homepage": "https://github.com/sneakymaxy/Quick-Credit#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "nodemailer": "^6.1.1",
    "pg": "^7.11.0",
    "swagger-ui-express": "^4.0.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.11",
    "nyc": "^14.0.0",
    "supertest": "^4.0.2"
  }
}
